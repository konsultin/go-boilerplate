# * App Core
COMPOSE_PROJECT_NAME=api-template
APP_ENV=development

PORT=8080
DEBUG=false
HTTP_READ_TIMEOUT_SECONDS=15
HTTP_WRITE_TIMEOUT_SECONDS=15
HTTP_IDLE_TIMEOUT_SECONDS=60
RATE_LIMIT_RPS=25
RATE_LIMIT_BURST=50
CORS_ALLOW_ORIGINS=*

# * Log Configuration
LOG_LEVEL=info
LOG_NAMESPACE=konsultin-api

# * Database Initialization
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=konsultin
DB_MAX_IDLE_CONN=10
DB_MAX_OPEN_CONN=100
DB_MAX_CONN_LIFETIME=300
DB_TIMEOUT_SECONDS=5

# * NATS Configuration
NATS_URL=nats://localhost:4222

# * Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# * MinIO/S3 Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# * JWT Configuration
JWT_ISSUER=api-template
JWT_SECRET=your-secret-key-here-min-32-chars
USER_SESSION_LIFETIME=3600
USER_SESSION_REFRESH_LIFETIME=2592000

# * Cron Configuration
CRON_USERNAME=konsultin@123!
CRON_PASSWORD=!123@konsultin

# * Observability (OpenTelemetry)
OTEL_COLLECTOR_ENDPOINT=localhost:4317

# * OAuth Configuration
GOOGLE_CLIENT_ID=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# * Feature Flags
FEATURE_FLAG_SINGLE_DEVICE=false
FEATURE_FLAG_UUPDP=false
